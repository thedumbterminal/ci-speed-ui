{
  "name": "ci-speed-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^5.14.16",
    "@mui/lab": "^5.0.0-alpha.151",
    "@mui/material": "^5.14.16",
    "@mui/x-data-grid": "^6.18.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@visx/visx": "^3.4.1",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.18.0",
    "swr": "^2.2.4",
    "typescript": "^4.9.5",
    "use-local-storage-state": "^19.1.0",
    "web-vitals": "^3.5.0",
    "yup": "^1.3.2"
  },
  "scripts": {
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier -c .",
    "lint:eslint": "eslint . --max-warnings=0 --format eslint-formatter-multiple",
    "format": "prettier --write .",
    "start": "react-scripts start",
    "build": "BUILD_PATH=./docs react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "coverage": "npm run test -- --coverage",
    "coverage:report": "npm run coverage -- --reporters=default --reporters=jest-junit",
    "test:watch": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "git checkout main && git pull origin main && npx update-browserslist-db && REACT_APP_API_BASE=https://ci-speed.herokuapp.com/api PUBLIC_URL=/ci-speed-ui npm run build && git add docs && git commit docs -m 'Deploy' && git push origin main",
    "serve": "npm run build && cd docs && python3 -m http.server",
    "ci": "npm run lint && npm run build && npm run coverage:report"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "junit",
        "output": "file",
        "path": "eslint_junit.xml"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "eslintIgnore": [
    "coverage/*",
    "docs/*"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "eslint-formatter-multiple": "^2.0.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "react-scripts": "5.0.1",
    "update-browserslist-db": "^1.0.13"
  }
}
