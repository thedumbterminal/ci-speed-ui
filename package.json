{
  "name": "ci-speed-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource/roboto": "^5.0.13",
    "@hookform/resolvers": "^3.3.4",
    "@mui/icons-material": "^5.15.17",
    "@mui/lab": "^5.0.0-alpha.170",
    "@mui/material": "^5.15.17",
    "@mui/x-data-grid": "^7.3.2",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.6",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@visx/visx": "^3.10.2",
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "qs": "^6.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.3",
    "react-router-dom": "^6.23.0",
    "swr": "^2.2.5",
    "typescript": "^5.4.5",
    "use-local-storage-state": "^19.2.0",
    "web-vitals": "^3.5.2",
    "yup": "^1.4.0"
  },
  "scripts": {
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:prettier": "prettier -c .",
    "lint:eslint": "eslint . --max-warnings=0 --format eslint-formatter-multiple",
    "format": "prettier --write .",
    "start": "PUBLIC_API_BASE=http://localhost:5000/api rsbuild dev",
    "build": "rsbuild build",
    "test": "jest",
    "coverage": "npm run test -- --coverage",
    "coverage:report": "npm run coverage -- --reporters=default --reporters=jest-junit",
    "test:watch": "react-scripts test",
    "deploy": "git checkout main && git pull origin main && npx update-browserslist-db && PUBLIC_API_BASE=https://ci-speed.herokuapp.com/api PUBLIC_URL=/ci-speed-ui npm run build && git add docs && git commit docs -m 'Deploy' && git push origin main",
    "serve": "npm run build && cd docs && python3 -m http.server",
    "ci": "npm run lint && npm run build && npm run coverage:report",
    "preview": "rsbuild preview"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "junit",
        "output": "file",
        "path": "eslint_junit.xml"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "eslintIgnore": [
    "coverage/*",
    "docs/*"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@rsbuild/core": "^0.6.14",
    "@rsbuild/plugin-react": "^0.6.10",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-formatter-multiple": "^2.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "update-browserslist-db": "^1.0.15"
  }
}
